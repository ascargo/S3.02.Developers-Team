	<footer class="text-center text-gray-500 text-sm mt-6 p-4">
		&copy; <?= date('Y') ?> My ToDo App
	</footer>

	<script>
		(function() {
			const overlay = document.getElementById('modalOverlay');
			const body = document.getElementById('modalBody');
			const titleEl = document.getElementById('modalTitle');
			const closeBtn = document.getElementById('modalClose');

			function openModalFrom(url, title) {
				titleEl.textContent = title || 'Details';
				body.innerHTML = '<div class="p-6 text-center text-gray-600">Loadingâ€¦</div>';
				overlay.classList.remove('hidden');
				fetch(url + (url.includes('?') ? '&' : '?') + 'partial=1')
					.then(r => r.text())
					.then(html => {
						body.innerHTML = html;
					})
					.catch(() => {
						body.innerHTML = '<div class="p-6 text-red-800">Failed to load.</div>';
					});
			}

			function closeModal() {
				overlay.classList.add('hidden');
				body.innerHTML = '';
			}

			closeBtn.addEventListener('click', closeModal);
			overlay.addEventListener('click', (e) => {
				if (e.target === overlay) closeModal();
			});

			document.addEventListener('click', function(e) {
				const a = e.target.closest('[data-modal]');
				if (!a) return;
				const href = a.getAttribute('href');
				if (!href || href === '#') return;
				e.preventDefault();
				openModalFrom(href, a.getAttribute('data-title') || a.textContent.trim());
			});
			document.addEventListener('click', function(e) {
				const a = e.target.closest('[data-delete]');
				if (!a) return;

				e.preventDefault();
				if (!confirm('Delete this task?')) return;

				const href = a.getAttribute('href');
				const url = href + (href.includes('?') ? '&' : '?') + 'ajax=1';

				fetch(url, {
						headers: {
							'Accept': 'application/json'
						}
					})
					.then(r => r.json())
					.then(data => {
						if (data && data.ok) {
							closeModal();
							window.location.href = '<?= WEB_ROOT ?>' + '/task';
						} else {
							alert((data && data.error) || 'Failed to delete the task.');
						}
					})
					.catch(() => alert('Failed to delete the task.'));
			});
		})();
	</script>

